# Server configuration
PORT=3000
HOST=localhost

# Environment
NODE_ENV=development

# API Management configuration (recommended for production)
APIM_BASE_URL=https://maber-apim-test.azure-api.net/pokedata-api
APIM_SUBSCRIPTION_KEY=your_api_management_subscription_key_here

# Azure Functions configuration (for direct calls in development/testing)
AZURE_FUNCTIONS_BASE_URL=https://pokedata-func.azurewebsites.net/api
AZURE_FUNCTION_KEY=your_azure_function_key_here

# Feature flags
USE_API_MANAGEMENT=true
DEBUG_API=false
ENABLE_CACHING=true
ENABLE_MOCK_DATA=false

# Legacy API configuration (for backward compatibility)
API_KEY=your_pokedata_jwt_token_here
API_BASE_URL=https://maber-apim-test.azure-api.net/pokedata-api/v0
API_SUBSCRIPTION_KEY=your_api_management_subscription_key_here
STAGING_FUNCTION_KEY=your_staging_function_key_here
PROD_FUNCTION_KEY=your_production_function_key_here
